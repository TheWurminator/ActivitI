<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_me_in"
        android:id="@+id/getmein"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="getmein" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loginFragmentContainer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:src="@drawable/name"
            android:contentDescription="@string/name"
            android:tint="#ffffff"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"
            android:maxWidth="200dp"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:contentDescription="@string/logo"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:tint="#ffffff"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="loginServer"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annoying_login"
            android:onClick="loginServer"
            android:id="@+id/annoyingLoginButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="253dp"
        android:layout_marginStart="253dp" />

</RelativeLayout>