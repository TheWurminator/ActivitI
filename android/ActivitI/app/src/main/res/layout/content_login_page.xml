<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Me In"
        android:id="@+id/getmein"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="getmein" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loginFragmentContainer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annoying Login"
            android:onClick="loginServer"
            android:id="@+id/annoyingLoginButton"
            android:layout_marginBottom="115dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="loginServer"
            android:layout_above="@+id/annoyingLoginButton"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:contentDescription="@string/logo"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:tint="#ffffff"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:layout_marginBottom="54dp"
            android:layout_above="@+id/login_button"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:src="@drawable/name"
            android:contentDescription="@string/name"
            android:tint="#ffffff"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"
            android:maxWidth="200dp"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" /></RelativeLayout>

</RelativeLayout>